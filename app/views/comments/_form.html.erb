<div class="form-comment">
	<%= form_for([@post, @post.comments.build]) do |f| %>
		<div>
			<%= f.label :commenter %><br>
			<%= f.text_field :commenter %>
		</div>
		<div class="textarea">
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</div>
		<div>
			<%= f.submit %>
		</div>
	<% end %>
</div>