<section id="devise">
    <h2>Sign Up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :login, 'Username' %><br />
      <%= f.text_field :login, { :autofocus => true, :required => true, :placeholder => 'Username' } %></div>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, { :required => true, :placeholder => 'Email' } %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, { :required => true, :placeholder => 'Your Password' } %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, { :required => true, :placeholder => 'Repeat your password' } %></div>

      <div><%= f.submit "Sign up", { :class => 'btn' } %></div>
    <% end %>
      <div class="or">OR</div>

    <%= link_to( "Sign in", new_session_path(resource), { :class => 'btn btn-inverse' } ) -%>
</section>